<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sokkan" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/blue_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey</item>
        <item name="colorSecondaryVariant">@color/light_grey</item>
        <item name="colorOnSecondary">@color/full_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorAccent" tools:targetApi="21">@color/red</item>
        <item name="fontFamily">@font/iransans_fanum</item>

    </style>

    <style name="Title" parent="Theme.Sokkan">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Title2" parent="Theme.Sokkan">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/iransans_fanum_bold</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Button" parent="Theme.Sokkan">
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/dark_blue</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextButton" parent="Theme.Sokkan">
        <item name="android:textColor">@color/blue_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallText" parent="Theme.Sokkan">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigationViewTextStyle" parent="Theme.Sokkan">
        <item name="fontFamily">@font/iransans_fanum</item>
    </style>

    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>
</resources>